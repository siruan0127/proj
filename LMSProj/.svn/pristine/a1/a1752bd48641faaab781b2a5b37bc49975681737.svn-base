@charset "UTF-8";
#personalGradeInfo, #tgradeYellowBox {
	border : 1px solid lightgray;
	margin : 10px;
	padding : 10px;
}
#tgradeYellowBox {
	background : lightyellow;
	height:47px;
}
#tgradeYellowBox  input{
	width : 80px;
	margin-left : 7px;
	margin-right : 7px;
	padding-left : 10px;
}
#tgradeGreenText {
	color : green;
}
#gridNgrade {
	height : 560px;
	margin : 10px;
	padding : 0px;
	margin-bottom : 30px;
}
#grid, #appealGrade {
	width : 48.4%;
	float : left;
	margin-top : 10px;
}
#appealGrade {
	border : 1px solid lightgray;
	float : right;
	padding : 10px;
	height : 540px;
}
#personalGradeInfo{
  	border: 1px solid lightgray;
	margin: 10px;
	padding: 10px;
	background: #f4f7fd;
	width: 100%;
	min-width: 1200px;
	max-width: 1400px;
	margin: 0 auto;
}
#personalGradeInfo .round{
	display : inline-block;
}
#personalGradeInfo input{
	width : 180px;
 	height: 33px;
 	background: #F2F2F2;
 	border: 1px solid gray;
 	border-radius : 5px;
		padding-left : 5px;
}
#personalGradeInfo label{
	text-align : right;
	width : 130px;
}
#personalGradeInfo div:nth-child(2){
	margin-left : 254px;
}
#tgradePreAppealPage{
	width : 90%;
	margin-left : auto;
	margin-right : auto;
}
#tgradePreAppealSelect{
	display:inline-block;
	margin-left : 2%;
}
#percentageTable{
	float : right;
	margin-right : 10px;
}
#appealGrade{
	text-align : center;
	border-collapse:collapse;
	border: 1px solid #999;
}
#appealGrade td{
	border:none;
}
#appealGrade td:nth-child(2n-1){
	background : #f4f7fd;
	width : 40%;
}
#appealGrade tr:last-child .lecTitleRound{
	text-align : center;
	padding-bottom : 5px;
}
#appealGrade tr:last-child .lecTitleRound label{
	width : 10%;
}
#appealGrade input{
	border: 1px solid #dedede;
}
#appealGrade tr:last-child .lecTitleRound input{
	width : 77%;
	height : 30px;
}
#preAppealSubmitBtn{
	float : right;
	margin-right : 15px;
}
.btn-primary{
	background : #2a5388;
	border : #2a5388;
	box-shadow : #2a5388;
}
.btn-primary:hover{
	background : #4671af;
	border : #4671af;
	box-shadow : #4671af;
}